<Window x:Class="MitzyStreamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MitzyStreamer" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Login-Bereich oben -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Grid Margin="5">
                <TextBox x:Name="ServerBox" Width="200"/>
                <Label x:Name="ServerBoxPlaceholder" Content="Server URL" Background="Transparent"
                       Opacity="0.5" IsHitTestVisible="False" VerticalAlignment="Top" Margin="5,2,0,0"/>
            </Grid>

            <Grid Margin="5">
                <TextBox x:Name="UserBox" Width="150"/>
                <Label x:Name="UserBoxPlaceholder" Content="Benutzername" Background="Transparent"
                       Opacity="0.5" IsHitTestVisible="False" VerticalAlignment="Top" Margin="5,2,0,0"/>
            </Grid>

            <PasswordBox x:Name="PassBox" Width="150" Margin="5"/>
            <Button Content="Verbinden" Width="100" Click="Login_Click" Margin="5"/>
        </StackPanel>

        <!-- Listen-UI unten -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5">
                <Label Content="Künstler" FontWeight="Bold"/>
                <ListBox x:Name="ArtistList" SelectionChanged="ArtistList_SelectionChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5">
                <Label Content="Alben" FontWeight="Bold"/>
                <ListBox x:Name="AlbumList" SelectionChanged="AlbumList_SelectionChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5">
                <Label Content="Tracks" FontWeight="Bold"/>
                <ListBox x:Name="TrackList" SelectionChanged="TrackList_SelectionChanged"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
