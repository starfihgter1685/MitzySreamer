<Window x:Class="MitzyStreamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MitzyStreamer" Height="600" Width="800">
    <DockPanel LastChildFill="True">

        <!-- Statusleiste ganz unten -->
        <StatusBar DockPanel.Dock="Bottom" Name="MainStatusBar">
            <TextBlock Name="NowPlayingText" Text="Kein Song" Margin="5"/>
            <Separator/>
            <TextBlock Name="ElapsedText" Text="00:00" Margin="5"/>
            <ProgressBar Name="SongProgress" Width="200" Height="16" Minimum="0" Maximum="1" Margin="5"/>
            <TextBlock Name="DurationText" Text="00:00" Margin="5"/>
        </StatusBar>

        <!-- Haupt-Grid -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Login -->
                <RowDefinition Height="*"/>     <!-- Hauptinhalt -->
                <RowDefinition Height="Auto"/>  <!-- Player Controls -->
                <RowDefinition Height="Auto"/>  <!-- Playlists -->
            </Grid.RowDefinitions>

            <!-- Login Bereich -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
                <StackPanel Margin="5">
                    <TextBlock Text="Server URL"/>
                    <TextBox x:Name="ServerBox" Width="200"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Benutzername"/>
                    <TextBox x:Name="UserBox" Width="150"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Passwort"/>
                    <PasswordBox x:Name="PassBox" Width="150"/>
                </StackPanel>
                <Button Content="Login" Click="Login_Click" Margin="5" VerticalAlignment="Bottom"/>
            </StackPanel>

            <!-- Hauptinhalt -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="ArtistList" SelectionChanged="ArtistList_SelectionChanged" Margin="5"/>
                <ListBox x:Name="AlbumList" Grid.Column="1" SelectionChanged="AlbumList_SelectionChanged" Margin="5"/>
                <ListBox x:Name="TrackList" Grid.Column="2" SelectionChanged="TrackList_SelectionChanged" Margin="5"/>
            </Grid>

            <!-- Steuerung -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="⏮️" Click="PrevTrack_Click" Margin="5"/>
                <Button Content="▶️ / ⏸️" Click="PlayPause_Click" Margin="5"/>
                <Button Content="⏭️" Click="NextTrack_Click" Margin="5"/>
                <Button x:Name="ShuffleButton" Content="Shuffle: Aus" Width="100" Margin="5" Click="ShuffleButton_Click" />
            </StackPanel>

            <!-- Playlist List -->
            <ListBox x:Name="PlaylistList"
                     Grid.Row="3"
                     Height="100"
                     SelectionChanged="PlaylistList_SelectionChanged"
                     Margin="5"
                     Background="LightGray"
                     BorderBrush="Black"
                     BorderThickness="1"/>
        </Grid>
    </DockPanel>
</Window>
